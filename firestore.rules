rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Projects collection - main data structure
    match /projects/{projectId} {
      // Allow read if user is authenticated and owns the project
      allow read: if request.auth != null
                  && request.auth.uid == resource.data.ownerId;

      // Allow create if user is authenticated and sets themselves as owner
      allow create: if request.auth != null
                    && request.resource.data.ownerId == request.auth.uid;

      // Allow update if user is authenticated, owns the project,
      // and doesn't change the ownerId
      allow update: if request.auth != null
                    && request.auth.uid == resource.data.ownerId
                    && request.resource.data.ownerId == resource.data.ownerId;

      // Deny delete operations (users shouldn't delete projects)
      allow delete: if false;
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
